{% extends "base.html.j2" %}

{% block app_content %}
<h1>Fuel log</h1>
<p><a href="{{ url_for('createFuelLogs') }}">Create</a></p>
<p>
    <table border=1>
        <thead>
            <th>ID</th>
            <th>User-ID</th>
            <th>Distance</th>
            <th>Quantity</th>
            <th>Recorded</th>
        </thead>
        <tbody>
            {% for fuelLog in fuelLogs %}
            <tr>
                <td align="right">
                    {{ fuelLog.id }}
                </td>
                <td align="right">
                    {{ fuelLog.user_id }}
                </td>
                <td align="right">
                    {{ fuelLog.distance|round(1) }} km
                </td>
                <td align="right">
                    {{ fuelLog.quantity|round(2) }} L
                </td>
                <td>
                    {{ fuelLog.recorded }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</p>
{% endblock %}